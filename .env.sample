# Prisma Accelerate connection string (use DNS, not direct IPv4)
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY"

# Direct connection for migrations and introspection
DIRECT_DATABASE_URL="mongodb+srv://<username>:<password>@cluster0.mongodb.net/yourdbname?retryWrites=true&w=majority"

# Upstash Redis credentials for distributed rate limiting
UPSTASH_REDIS_REST_URL="https://us1-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="YOUR_UPSTASH_REDIS_TOKEN"

# RAG (Gemini/Astra) integration
RAG_API_URL="https://your-rag-service.example.com/api"
RAG_API_KEY="YOUR_RAG_API_KEY"
